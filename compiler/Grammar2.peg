importDecl ImportDecl:
    "import" p0="UpperId" ps=("." p="UpperId")* "NEWLINE":
        let vec: Vec[Str] = once(p0.text).chain(ps.iter().map(|p: (p: Token)|: p.p.text)).toVec()
        ImportDecl(path = vec)


