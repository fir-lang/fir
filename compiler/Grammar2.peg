typeParams Vec[Id]:
    id0="LowerId" ids=("," id="LowerId")* ","?:
        let vec: Vec[Id] =
            once(newId(id0.text)).chain(ids.iter().map(|id: (id: Token)|: newId(id.id.text))).toVec()
